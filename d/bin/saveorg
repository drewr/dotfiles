#!/usr/bin/env zsh
set -e
echo '------------------------------------------------------------------------'
echo -n '                      '$(date)
echo
echo '------------------------------------------------------------------------'
set -x

cd ~/Sync/Git/org/refs/heads && ls *sync-conflict* && exit 99

cd ~/.org
echo
time git add --ignore-removal --all && git commit -m "Save $(date)" || echo continuing
echo
time git pull gitsync master
echo
time git push gitsync master
cd .
