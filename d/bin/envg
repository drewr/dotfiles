#!/bin/bash

# Run a process with ephemeral env sourced from encrypted file.
#
# Example:
#
# echo SECRET=shhhh | gpg2 -e -r me@doma.in - >~/.env.secret.gpg
# envg secret ls

set -e
set -u
set -o pipefail

CRED=${1:-drewr}; shift
credf=$HOME/.env.${CRED}.gpg
if [[ ! -f $credf ]]; then
  echo $credf does not exist
  exit 99
fi

if [[ "Linux" == `uname -s` ]]; then
  tmp=$(mktemp envg.XXXX)
else
  tmp=$(mktemp -t envg)
fi

err=${tmp}.error

gpg2 --batch -d $credf >$tmp 2>$err

if [[ $? != 0 ]]; then
  cat $err
fi

set -a
. $tmp
set +a

clean() {
  [[ -f $tmp ]] && rm $tmp
  [[ -f $err ]] && rm $err
}

trap clean EXIT INT TERM

$*
res=$?

trap - EXIT INT TERM
clean
exit $res
