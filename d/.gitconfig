[alias]
ci = commit
co = checkout
s = status -su
st = status -su
lg = log --graph --decorate --oneline --all
ll = log --date=local
b = branch
ver = "!git log --pretty=format:'%ai %h' -1 | perl -pe 's,(\\d\\d\\d\\d)-(\\d\\d)-(\\d\\d) (\\d\\d):(\\d\\d):(\\d\\d) [^ ]+ ([a-z0-9]+),\\1\\2\\3\\4\\5\\6\\7,'"
pr = "!f() { git fetch origin pull/$1/head:pull/$1; }; f"

[apply]
whitespace = strip

[diff]
color = auto
rename = copy 

[push]
default = tracking

[pull]
rebase = false

[pager]
color = true 

[status]
color = auto

[rerere]
enabled = true

[credential]
helper = store

[commit]
gpgsign = true
